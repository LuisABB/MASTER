# Server Configuration
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DATABASE_URL="postgresql://trends_user:trends_password@localhost:5432/trends_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Cache Configuration
CACHE_TTL_SECONDS=86400  # 24 horas (24 * 60 * 60)
CACHE_STALE_TTL_SECONDS=172800  # 48 horas para fallback (2 * 24 * 60 * 60)

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Logging
LOG_LEVEL=info

# Google Trends Configuration (MVP Settings)
GOOGLE_TRENDS_MAX_RETRIES=3
GOOGLE_TRENDS_RETRY_DELAY_MS=5000  # 5 segundos base para exponential backoff
GOOGLE_TRENDS_REQUEST_DELAY_MS=4000  # 4 segundos entre requests
GOOGLE_TRENDS_CONCURRENCY=1  # Solo 1 request a la vez
