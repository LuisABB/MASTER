{
  "name": "trends-api",
  "version": "1.0.0",
  "description": "Multi-source trend analysis API - MVP 1 (Google Trends)",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "cache:clear": "redis-cli FLUSHALL && echo 'âœ… Cache cleared successfully'",
    "cache:keys": "redis-cli KEYS 'trend:*' | head -20",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "trends",
    "api",
    "google-trends",
    "analytics"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "google-trends-api": "^4.9.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^5.20.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
